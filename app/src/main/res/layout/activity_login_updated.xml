<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="getsterr.getsterr.activities.login.LoginActivity">

    <LinearLayout
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/getsterr_full_white"
            android:layout_marginBottom="20dp"/>

        <!--<Button-->

        <!--android:id="@+id/login_save_button"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/colorPrimaryDark"-->
        <!--android:textColor="@color/colorAccent"-->
        <!--android:text="Save"/>-->

        <!--Facebook-->

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"

            />

        <!--Pinterest-->
        <Button
            android:id="@+id/pinterst_login_button"
            android:layout_width="176dp"
            android:layout_height="28dp"
            android:background="@drawable/login_pinterest"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>

        <!--Twitter-->
        <!--<com.twitter.sdk.android.core.identity.TwitterLoginButton-->
        <!--android:id="@+id/twitter_login_button"-->
        <!--android:layout_width="176dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_height="28dp"-->
        <!--android:layout_margin="5dp"-->
        <!--android:textSize="12sp"/>-->
        <ImageButton
            android:id="@+id/twitter_login_button"
            android:layout_width="176dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/login_twitter"
            />

        <!--LinkedIn-->
        <ImageButton
            android:id="@+id/linkedin_login_button"
            android:layout_width="176dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/login_linkedin"
            />

        <!--Instagram-->
        <Button
            android:id="@+id/instagram_login_button"
            android:layout_width="176dp"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_instagram"
            />

    </LinearLayout>

    <Button
        android:id="@+id/login_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_button"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:text="Next"/>

</RelativeLayout>
