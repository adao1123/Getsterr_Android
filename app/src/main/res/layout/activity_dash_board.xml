<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dash_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="getsterr.getsterr.activities.dashboard.DashBoardActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/dashboard_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top"
            app:theme="@style/MyActionBarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:gravity="center_horizontal"
        android:background="@color/colorAccentLight"
        android:text="FILTER"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="7"
        android:background="@color/colorAccentLight">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <!--<ImageButton-->
            <!--android:id="@+id/dash_facebook_button"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:backgroundTint="@color/facebook"-->
            <!--android:background="@drawable/roundcorner"-->
            <!--android:src="@drawable/ic_facebook_f"-->
            <!--android:visibility="gone"/>-->
        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/roundcorner"
            android:backgroundTint="@color/facebook"
            android:layout_alignParentRight="true"
            android:id="@+id/dash_facebook_button">
            <ImageButton
                android:id="@+id/dash_social_facebook_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/facebook"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_facebook"
                android:padding="10dp"
                />
        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/dash_twitter_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/twitter"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_twitter"
            android:visibility="gone"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/dash_pinterest_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/pinterest"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@drawable/roundcorner"
            android:src="@drawable/pinterest_white"
            android:visibility="gone"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/dash_linkedin_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/linkedin"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_linkedin"
            android:visibility="gone"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/dash_youtube_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/youtube"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_youtube"
            android:visibility="gone"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/dash_instagram_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/instagram"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_instagram"
            android:visibility="gone"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentLight"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/dash_search_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_edittext"
            android:drawableRight="@drawable/ic_search_black_24dp"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:hint="Search"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dashbard_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <!--<fragment-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--/>-->
    </FrameLayout>



</LinearLayout>
