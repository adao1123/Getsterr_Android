<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="getsterr.getsterr.activities.main.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top"
            app:theme="@style/MyActionBarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/main_media_middle_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:id="@+id/main_youtube_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/youtube"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_youtube" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/main_snapchat_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorAccentLight"
            android:background="@drawable/roundcorner"
            android:visibility="invisible"
            android:src="@drawable/circle" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/main_pinterest_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:backgroundTint="@color/pinterest"
            android:background="@drawable/roundcorner"
            android:src="@drawable/pinterest_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_media_top_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/main_media_middle_linearLayout"
        android:weightSum="3">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/main_facebook_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/facebook"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_facebook" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/main_linkedin_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/linkedin"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_linkedin" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_media_bottom_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main_media_middle_linearLayout"
        android:weightSum="3">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/main_instagram_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/instagram"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_instagram" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:id="@+id/main_twitter_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/twitter"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_twitter" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

    </LinearLayout>


    <Button
        android:id="@+id/main_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:text="Next"/>

    <TextView
        android:id="@+id/main_instructions_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:text="Select social media properties you want to include"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/main_media_top_linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
